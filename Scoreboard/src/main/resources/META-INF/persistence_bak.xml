<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence" 
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
             version="3.0"
             xsi:schemalocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
    
    <persistence-unit name="PU" transaction-type="JTA">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
        <properties>
            <!-- JDBC properties -->
            <!-- Set these values in your main maven settings.xml -->
            <!--property name="jakarta.persistence.jdbc.url" value="${postgres.url}"/-->
            <property name="jakarta.persistence.jdbc.url" value="${postgres.url}"/>
            <property name="jakarta.persistence.jdbc.user" value="${postgres.username}"/>
            <property name="jakarta.persistence.jdbc.password" value="${postgres.password}"/>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
        
        </properties>
    </persistence-unit>
    
    
</persistence>
